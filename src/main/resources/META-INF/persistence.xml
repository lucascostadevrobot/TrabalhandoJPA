<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                                 http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="meu-condominio-test">
        <description>Unidade de persistencia para o projeto de estudo meu condominio-test( trabalhando com JPA)
        </description>

        <!-- Classes Entitys que serão mapeadas e persistidas como tabelas-->
        <class>classes.model.Proprietarios</class>

        <!--Configurações de Conexão com o Baanco de Dados -->
        <properties>
            <property name="javax.persitence.jdbc.url" value="jdbc:mysql://localhost:3306/meu_condominio"/>
            <property name="javax.persitence.jdbc.user" value="root"/>
            <property name="javax.persitence.jdbc.password" value="admin123"/>
            <property name="javax.persitence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>